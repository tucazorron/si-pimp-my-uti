<div class="main-container">
  <h1>Monitoramento de Pacientes</h1>
  <ul class="list-container">
    <% @patients.each do |patient| %>
    <li class="page-item">
      <p> <b> Paciente: </b> <%= patient.name %></p>
      <p> <b> RG: </b><%= patient.rg %></p>
      <p> <b> Idade: </b> <%= patient.age %></p>
      <p> <b> Causa de Internação: </b> <%= patient.cause %></p>
      <p> <b> Descrição: </b> <%= patient.description %></p>
      <p> <b> Sexo: </b> <%= patient.gender.name %></p>
      <%= link_to "Editar Paciente", patient %>
    </li>
    <% end %>
  </ul>
</div>